{
	"extends": ["airbnb-base", "jquery" ],
	"env": {
		"browser": true,
		"es6": true,
		"jquery": true,
		"webextensions": true
	},
	"parserOptions": {
		"ecmaVersion": 2017
	},
	"rules": {
		"array-bracket-spacing": "warn",
		"block-scoped-var": "off",
		"brace-style": ["warn", "1tbs"],
		"camelcase": "warn",
		"computed-property-spacing": ["error", "never"],
		"dot-notation": "off",
		"eqeqeq": "error",
		"func-names": "off",
		"indent": ["error", 4],
		"linebreak-style": ["error", "unix"],
		"max-len": "off",
		"no-alert": "error",
		"no-console": "off",
		"no-loop-func": "off",
		"no-multi-spaces": "warn",
		"no-plusplus": "off",
		"no-tabs": "warn",
		"no-useless-escape": "off",
		"no-var": "off",
		"no-underscore-dangle": "off",
		"no-unused-vars": "warn",
		"object-curly-spacing": ["warn", "always"],
		"quote-props": "off",
		"quotes": ["error", "single"],
		"prefer-arrow-callback": "warn",
		"prefer-template": "off",
		"semi": ["error", "always"],
		"space-before-blocks": "warn",
		"space-in-parens": ["error", "never"],
		"vars-on-top": "off"
	},
	"globals": {
		"browser": true,
		"isFirefox": true,
		"jQuery": true
	}
}